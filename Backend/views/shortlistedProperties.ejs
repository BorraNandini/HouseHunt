<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Shortlisted Properties</title>
 
 
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
 
  
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
 
  <%- include('header') %>
 
  <style>
    body {
      font-family: Arial, sans-serif;
      background-image: url("https://imgpile.com/images/67c90eaf9604057f0f9c0e52ffeb119c.jpg");
      background-size: cover;
      background-position: center;
      margin: 0;
      padding: 0;
      height: 100vh;
      background-attachment: fixed;
      overflow: hidden;
    }
 
    .container {
      margin-top: 40px;
      width: 75%;
      max-width: 1000px;
      margin-left: auto;
      margin-right: auto;
      padding: 20px;
      background-color: #ffffffbe;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-height: calc(100vh - 120px);
      overflow-y: auto;
      text-align: center;
    }
 
    .property-grid-two-columns {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
 
    .property-item {
      border: 1px solid #ccc;
      padding: 15px;
      background-color: #f9f9f9;
      border-radius: 8px;
      text-align: left;
    }
 
    .property-title {
      font-size: 1.5em;
      margin-bottom: 10px;
    }
 
    .info-box {
      border: 1px solid #ddd;
      background-color: #f7f7f7;
      padding: 10px;
      border-radius: 5px;
      margin-top: 10px;
    }
 
    .property-owner {
      margin-top: 15px;
      text-align: center;
    }
 
    .view-owner-btn,
    .booking-btn {
      margin: 5px;
    }
 
    .carousel-inner img {
      height: 200px;
      object-fit: cover;
    }
    .big-heart {
  font-size: 30px;
}
  </style>
</head>
<body>
  <div class="container properties-container" id="shortlisted-property-list">
    <h2>Shortlisted Properties</h2>
 
    <% if (properties && properties.length > 0) { %>
      <div class="property-grid-two-columns">
        <% properties.forEach((property, index) => { %>
          <div class="property-item" id="property-<%= property.id %>">
           
           
 
  <h3 class="property-title mb-0"><%= property.name %></h3>
 

 
            <p class="mt-4"><strong>Description:</strong> <%= property.description || 'No description available' %></p>
 
            <p>
  <strong>Location:</strong>
  <%= property.address || 'Address not provided' %>,
  <%= property.city || 'City not provided' %>,
  <%= property.state || 'State not provided' %>
</p>
 
 
            <div class="property-images mb-3">
              <div id="carouselShortlisted<%= index %>" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <% if (property.images && property.images.length > 0) { %>
                    <% property.images.forEach(function(image, imgIndex) { %>
                      <div class="carousel-item <%= imgIndex === 0 ? 'active' : '' %>">
                        <img class="d-block w-100" src="<%= image.image_path.replace(/\\/g, "/") %>" alt="Property Image">
                      </div>
                    <% }); %>
                  <% } else { %>
                    <div class="carousel-item active">
                      <p>No images available for this property.</p>
                    </div>
                  <% } %>
                </div>
                <a class="carousel-control-prev" href="#carouselShortlisted<%= index %>" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselShortlisted<%= index %>" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
 
            <div class="info-box">
              <div class="row">
                <div class="col-6"><strong>Price:</strong>
                  <%= property.property_status === 'rent' ? property.base_price : property.total_price %>
                </div>
                <div class="col-6"><strong>Size:</strong> <%= property.size %> sqft</div>
              </div>
              <div class="row mt-2">
                <div class="col-6"><strong>Parking:</strong> <%= property.parking || 'N/A' %></div>
                <div class="col-6"><strong>Bathrooms:</strong> <%= property.available_bathrooms %></div>
              </div>
            </div>
 
       
           
            <h5 class="mt-4">View Owner Details:</h5>
              <div class="d-flex justify-content-between align-items-center">
            <div class="property-owner">
              <button type="button" class="btn btn-info view-owner-btn" onclick="window.location.href='/propertyInfo/<%= property.id %>'">View Owner Details</button>
              <button type="button" class="btn btn-success booking-btn" onclick="window.location.href='/createBooking/<%= property.id %>'">Book</button>
           
             <button class="btn btn-link text-danger p-0" onclick="unshortlistProperty('<%= property.id %>', this)" title="Remove from shortlist">
    <i class="fas fa-heart big-heart" ></i>
  </button>
</div>
          </div>
 
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p><%= message || 'No shortlisted properties available.' %></p>
    <% } %>
  </div>
 <script>
    function unshortlistProperty(propertyId, buttonElement) {
      fetch('/shortlist', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ propertyId })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          
          const propertyCard = document.getElementById(`property-${propertyId}`);
          if (propertyCard) {
            propertyCard.remove();
          }
 
         
          const grid = document.querySelector('.property-grid-two-columns');
          if (grid && grid.children.length === 0) {
        
            const container = document.querySelector('.properties-container');
            container.innerHTML =  '<h2>Shortlisted Properties</h2>' +
            '<p>No shortlisted properties available.</p>';
          }
        } else {
          console.error('Failed to remove property:', data.message);
        }
      })
      .catch(error => {
        console.error('Error during unshortlisting:', error);
      });
    }
  </script>
 
</script>
</body>
</html>
 